.header {
	width: 100%;
	flex-basis: 4em;
	background: #006db4;
	color: white;
}


.left {
	position: absolute;
	margin: 1em;
	color: white;
	
}

.title {
	font-size: 1.5em;
	position: relative;
	left:-webkit-calc(50% - 1em*2) ;
	left: calc(50% - 1em*2);
	line-height: 3em;
}
@media only screen and (min-width: 100px) and (max-width: 360px) {
	.header {
	width: 100%;
	flex-basis: 5em;
	background: #006db4;
	color: white;
}
.title {
	font-size: 1.5em;
	position: relative;
	left:-webkit-calc(50% - 1em*2) ;
	left: calc(50% - 1em*2);
	line-height: 3em;
}
}